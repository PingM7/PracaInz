@model IEnumerable<Inz.Data.Fortnite>

@{
    ViewData["Title"] = "Fortnite";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h1>Fortnite</h1></center>
<center><h4>W tej sekcji możesz ogłosić się w poszukiwaniu towarzyszy, jak i wyszukać odpowiedniego kompana do wspólnej rozgrywki.</h4></center>

<form asp-action="Index" method="get">
    <div class="form-group">
        <label for="SearchString">Wyszukaj po nazwie:</label>
        <input type="text" name="SearchString"
               value="@ViewData["CurrentFilter"]" />
        <input type="submit" value="Szukaj" class="btn btn-primary" />
    </div>
</form>
<a asp-action="Index">Powrót do pełnej listy</a>




<p>
    <a asp-action="Create">Dodaj</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                </td>
            </tr>
        }
    </tbody>
</table>